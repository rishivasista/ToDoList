<%- include("partials/header") -%>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>
<div class="box">
    <% listitems.forEach((item)=>{%>
    <form action="/delete" method="POST">
        <div class="item">

            <input type="checkbox" name="checked_item" value="<%= item._id %>" onchange="this.form.submit()" />
            <p><%= item.name%></p>
    </form>
</div>
<% }) %>
<form class="item" method="POST">
    <input type="text" name="todoitem" placeholder="Enter ToDo" autocomplete="off" />
    <button name="add" type="submit" value=<%= listTitle %>>+</button>
</form>
</div>

<%- include("partials/footer") -%>